<mvc:View xmlns:mvc="sap.ui.core.mvc" controllerName="generated.app.controller.InitialModal" xmlns:m="sap.m" xmlns:core="sap.ui.core" xmlns:form="sap.ui.layout.form" xmlns:layout="sap.ui.layout">
    <m:Page showHeader="false" title="Responsive Page Title" showFooter="false" showNavButton="false">
        <m:content>
            <m:Label text="" design="Standard" width="100%" required="false" textAlign="Begin" textDirection="Inherit"/>
            <m:Title text="Bem vindo à Reserva de Salas" titleStyle="H2" width="100%" textAlign="Center" visible="true"/>
            <m:Title text="Edifício Sede - Sonangol EP" titleStyle="H3" width="100%" textAlign="Center" visible="true"/>
            <m:Label text="" design="Standard" width="100%" required="false" textAlign="Begin" textDirection="Inherit"/>
            <m:HBox alignItems="Center" direction="Row" fitContainer="true" width="auto" height="auto" justifyContent="SpaceBetween" renderType="Div" visible="true" displayInline="false">
                <m:items>
                    <core:Icon src="sap-icon://feeder-arrow" size="34px" color="" height="60px" width="48px" visible="true"/>
                    <m:Title text="Seleção Inicial" titleStyle="H1" width="100%" textAlign="Center" visible="true"/>
                    <core:Icon src="sap-icon://sys-help-2" size="34px" color="#4d94ff" height="60px" width="48px" visible="true" press="_onIconPress"/>
                </m:items>
                <m:layoutData/>
            </m:HBox>
            <form:Form width="100%" editable="true" visible="true">
                <form:title>
                    <core:Title text="Preencha os seguintes campos" level="H4"/>
                </form:title>
                <form:formContainers>
                    <form:FormContainer visible="true">
                        <form:formElements>
                            <form:FormElement visible="true">
                                <form:label>
                                    <m:Label text="Tipo de Reunião" design="Bold" width="100%" required="true" textAlign="Begin" textDirection="Inherit"/>
                                </form:label>
                                <form:fields>
                                    <m:ComboBox placeholder="Seleccione um tipo de reunião" editable="true" enabled="true" visible="true" width="auto" valueState="None" maxWidth="100%">
                                        <m:items>
                                            <core:Item text="Formação" enabled="true"/>
                                            <core:Item text="Interna" enabled="true"/>
                                            <core:Item text="Externa" enabled="true"/>
                                        </m:items>
                                    </m:ComboBox>
                                </form:fields>
                            </form:FormElement>
                            <form:FormElement visible="true">
                                <form:label>
                                    <m:Label text="Seleção de Datas e Horas (Início)" design="Bold" width="100%" required="true" textAlign="Begin" textDirection="Inherit"/>
                                </form:label>
                                <form:fields>
                                    <m:DateTimeInput placeholder="DD/MM/YYYY, HH:mm" type="DateTime" enabled="true" visible="true" width="auto"/>
                                </form:fields>
                            </form:FormElement>
                            <form:FormElement visible="true">
                                <form:label>
                                    <m:Label text="Seleção de Datas e Horas (Fim)" design="Bold" width="100%" required="true" textAlign="Begin" textDirection="Inherit"/>
                                </form:label>
                                <form:fields>
                                    <m:DateTimeInput placeholder="DD/MM/YYYY, HH:mm" type="DateTime" enabled="true" visible="true" width="auto"/>
                                </form:fields>
                            </form:FormElement>
                            <form:FormElement visible="true">
                                <form:label>
                                    <m:Label text="" design="Bold" width="0" required="false" textAlign="Begin" textDirection="Inherit"/>
                                </form:label>
                                <form:fields>
                                    <m:RadioButton selected="false" text="Manhã" editable="true" enabled="true" visible="true" width="auto" valueState="None"/>
                                    <m:RadioButton selected="false" text="Tarde" editable="true" enabled="true" visible="true" width="auto" valueState="None"/>
                                    <m:RadioButton selected="false" text="Dia" editable="true" enabled="true" visible="true" width="auto" valueState="None"/>
                                </form:fields>
                            </form:FormElement>
                            <form:FormElement visible="true">
                                <form:label>
                                    <m:Label text="Nº de Participantes" design="Bold" width="100%" required="true" textAlign="Begin" textDirection="Inherit"/>
                                </form:label>
                                <form:fields>
                                    <m:Input value="" placeholder="Insira o número de participantes esperado" type="Number" description="" showValueHelp="false" enabled="true" visible="true" width="auto" valueHelpOnly="false"/>
                                </form:fields>
                            </form:FormElement>
                            <form:FormElement visible="true">
                                <form:label>
                                    <m:Label text="Piso Preferencial" design="Bold" width="100%" required="true" textAlign="Begin" textDirection="Inherit"/>
                                </form:label>
                                <form:fields>
                                    <m:ComboBox placeholder="Seleccione um piso preferencial" editable="true" enabled="true" visible="true" width="auto" valueState="None" maxWidth="100%">
                                        <m:items>
                                            <core:Item text="Rés-do-Chão" enabled="true"/>
                                            <core:Item text="1º Andar" enabled="true"/>
                                            <core:Item text="2º Andar" enabled="true"/>
                                            <core:Item text="3º Andar" enabled="true"/>
                                            <core:Item text="4º Andar" enabled="true"/>
                                            <core:Item text="5º Andar" enabled="true"/>
                                            <core:Item text="6º Andar" enabled="true"/>
                                            <core:Item text="7º Andar" enabled="true"/>
                                        </m:items>
                                    </m:ComboBox>
                                </form:fields>
                            </form:FormElement>
                        </form:formElements>
                        <form:title/>
                    </form:FormContainer>
                </form:formContainers>
                <form:layout>
                    <form:ResponsiveGridLayout adjustLabelSpan="false" columnsL="2" labelSpanL="3" columnsM="1" labelSpanM="2" labelSpanS="12"/>
                </form:layout>
            </form:Form>
            <layout:Grid defaultIndent="L1 M0 S0" defaultSpan="L2 M4 S12" position="Center" width="100%" containerQuery="true" hSpacing="1" vSpacing="1">
                <layout:content>
                    <m:ToggleButton pressed="true" text="Laser" icon="sap-icon://target-group" iconFirst="true" width="auto" enabled="true" visible="true"/>
                    <m:ToggleButton pressed="true" text="Microfone" icon="sap-icon://microphone" iconFirst="true" width="auto" enabled="true" visible="true"/>
                    <m:ToggleButton pressed="true" text="Flipchart" icon="sap-icon://sys-monitor" iconFirst="true" width="auto" enabled="true" visible="true"/>
                    <m:ToggleButton pressed="true" text="Material de Escritório" icon="sap-icon://edit" iconFirst="true" width="auto" enabled="true" visible="true"/>
                    <m:ToggleButton pressed="true" text="Projetor" icon="sap-icon://projector" iconFirst="true" width="auto" enabled="true" visible="true"/>
                </layout:content>
            </layout:Grid>
            <m:Label text="" design="Standard" width="100%" required="false" textAlign="Begin" textDirection="Inherit"/>
            <m:HBox alignItems="Center" direction="Row" fitContainer="false" width="100%" height="auto" justifyContent="Center" renderType="Div" visible="true" displayInline="false">
                <m:items>
                    <m:Button text="Guardar" type="Emphasized" icon="sap-icon://save" iconFirst="true" width="auto" enabled="true" visible="true" iconDensityAware="false"/>
                </m:items>
                <m:layoutData/>
            </m:HBox>
        </m:content>
        <m:footer/>
        <m:headerContent/>
        <m:subHeader/>
        <m:customHeader/>
    </m:Page>
</mvc:View>
