<core:FragmentDefinition xmlns="sap.m" xmlns:core="sap.ui.core" xmlns:layout="sap.ui.layout">
	<Dialog id="confDialog" title="Informações da Reserva " class="sapUiResponsiveMargin confDialogContainer">
		<layout:HorizontalLayout>
			<layout:VerticalLayout>
				<HBox width="auto" alignItems="Start" alignContent="SpaceAround" class="sapUiResponsiveMargin">
					<Label class="confirmationLabel sapUiSmallMarginTop sapUiTinyMarginBegin " text="Responsável:"/>
					<Text class="sapUiSmallMarginTop sapUiTinyMarginBegin" id="txt_responsable" text="Master"/>
				</HBox>
				<HBox width="auto" alignItems="Start" alignContent="SpaceAround" class="sapUiResponsiveMargin">
					<Label class="confirmationLabel sapUiSmallMarginTop sapUiTinyMarginBegin " text="Tipo de Reunião:"/>
					<Text class="sapUiSmallMarginTop sapUiTinyMarginBegin" id="txt_type"/>
				</HBox>
				<HBox width="auto" alignItems="Start" alignContent="SpaceAround" class="sapUiResponsiveMargin">
					<Label class="confirmationLabel sapUiSmallMarginTop sapUiTinyMarginBegin" text="Data: "/>
					<Text class="sapUiSmallMarginTop sapUiTinyMarginBegin" id="txt_date"/>
				</HBox>
				<HBox width="auto" alignItems="Start" alignContent="SpaceAround" class="sapUiResponsiveMargin">
					<Label class="confirmationLabel sapUiSmallMarginTop sapUiTinyMarginBegin" text="Sala: "/>
					<Text class="sapUiSmallMarginTop sapUiTinyMarginBegin" id="txt_room"/>
				</HBox>
				<HBox width="auto" alignItems="Start" alignContent="SpaceAround" class="sapUiResponsiveMargin">
					<Label class="confirmationLabel sapUiSmallMarginTop sapUiTinyMarginBegin" text="Participantes previstos: "/>
					<Text class="sapUiSmallMarginTop sapUiTinyMarginBegin" id="txt_participants"/>
				</HBox>
				<HBox width="auto" alignItems="Start" alignContent="SpaceAround" class="sapUiResponsiveMargin">
					<Label class="confirmationLabel sapUiSmallMarginTop sapUiTinyMarginBegin" text="Recursos: "/>
					<Text class="sapUiSmallMarginTop sapUiTinyMarginBegin" id="txt_resources"/>
				</HBox>
			</layout:VerticalLayout>
		</layout:HorizontalLayout>
		<TextArea id="confirmDialogTextarea" placeholder="Adicione alguma observação relativa à sua reserva (opcional)." class="sapUiResponsiveMargin textareaContainer"></TextArea>
		<buttons>
			<Button text="Confirmar" press="confirmationPress"></Button>
			<Button text="Cancelar" press="closeDialog"></Button>
		</buttons>
	</Dialog>
</core:FragmentDefinition>